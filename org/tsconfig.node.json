{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "moduleResolution": "Bundler",
    "paths": {
      "@main/*": [
        "src/main/*"
      ],
      "@utils/*": [
        "src/main/utils/*"
      ],
      "@resources/*": [
        "resources/*"
      ]
    },
    "types": ["electron-vite/node"]
  },
  "include": [
    "electron.vite.config.*",
    "src/main/**/*",
    "src/preload/**/*"
  ]
}
